extends layout.pug
block content



block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up

        // register form
        form(method='POST' action='/users')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='first' name='name')
          div.form-group
            label(for='lname') lName:
            input#lname.form-control(type='text', placeholder='last' name='lname')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')

            button(type='submit') Submit


